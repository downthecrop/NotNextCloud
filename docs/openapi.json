{
  "openapi": "3.0.3",
  "info": {
    "title": "Local Cloud API",
    "version": "1.0.0",
    "description": "Local Cloud API for the Nextcloud alternative."
  },
  "servers": [
    {
      "url": "http://localhost:4170",
      "description": "Default local server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "EnvelopeOk": {
        "type": "object",
        "properties": {
          "ok": {
            "type": "boolean",
            "enum": [
              true
            ]
          },
          "data": {
            "type": "object"
          },
          "meta": {
            "type": "object"
          }
        },
        "required": [
          "ok",
          "data"
        ]
      },
      "EnvelopeError": {
        "type": "object",
        "properties": {
          "ok": {
            "type": "boolean",
            "enum": [
              false
            ]
          },
          "error": {
            "type": "object",
            "properties": {
              "code": {
                "type": "string"
              },
              "message": {
                "type": "string"
              },
              "details": {
                "type": "object"
              }
            },
            "required": [
              "code",
              "message"
            ]
          }
        },
        "required": [
          "ok",
          "error"
        ]
      },
      "Root": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "absPath": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "path"
        ]
      },
      "Entry": {
        "type": "object",
        "properties": {
          "rootId": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "size": {
            "type": "integer"
          },
          "mtime": {
            "type": "integer"
          },
          "mime": {
            "type": "string"
          },
          "ext": {
            "type": "string"
          },
          "isDir": {
            "type": "boolean"
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "artist": {
            "type": "string",
            "nullable": true
          },
          "album": {
            "type": "string",
            "nullable": true
          },
          "duration": {
            "type": "number",
            "nullable": true
          },
          "albumKey": {
            "type": "string",
            "nullable": true
          }
        },
        "required": [
          "rootId",
          "path",
          "name",
          "isDir"
        ]
      },
      "ListResponse": {
        "type": "object",
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Entry"
            }
          },
          "total": {
            "type": "integer",
            "nullable": true
          },
          "limit": {
            "type": "integer"
          },
          "offset": {
            "type": "integer"
          },
          "nextCursor": {
            "type": "string",
            "nullable": true
          }
        },
        "required": [
          "items",
          "total",
          "limit",
          "offset"
        ]
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
